# ==========================================
# BOT CONFIGURATION
# ==========================================

# REQUIRED - Bot Token
TOKEN=YOUR_BOT_TOKEN_HERE

# REQUIRED - Bot Client ID (Application ID)
CLIENT_ID=YOUR_CLIENT_ID_HERE

# ==========================================
# PREFIX & COLORS
# ==========================================

DEFAULT_PREFIX=!
COLOR_SUCCESS=#00FF00
COLOR_WARN=#FFD700
COLOR_ERROR=#FF0000
COLOR_COOLDOWN=#808080
COLOR_INFO=#0099FF

# ==========================================
# DEVELOPERS & TESTING
# ==========================================

# Comma separated Discord User IDs
DEVELOPER_IDS=123456789012345678,987654321098765432

# Test server ID (for development)
TEST_GUILD_ID=123456789012345678

# Environment: development | production
NODE_ENV=development

# ==========================================
# OPTIONAL - Bot Status
# ==========================================

# STATUS_TYPE: Playing | Watching | Listening | Competing | Streaming
STATUS_TYPE=Watching

# Placeholders: {prefix} {commands} {guilds} {users}
STATUS_TEXT={prefix}help | {commands} commands

# STATUS_STATE: online | idle | dnd | invisible
STATUS_STATE=online

